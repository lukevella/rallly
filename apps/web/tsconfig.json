{
  "extends": "@rallly/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["public/*"],
    },
    "strictNullChecks": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "tailwind.config.cjs",
    "i18n.config.cjs",
    "i18next-scanner.config.cjs",
    "next-i18next.config.cjs",
    "next.config.cjs",
    "sentry.server.config.cts",
    "sentry.edge.config.cts",
    "sentry.client.config.cts",
    "postcss.config.cjs",
  ],
  "exclude": ["node_modules"],
}
