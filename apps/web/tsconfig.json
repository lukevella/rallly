{
  "extends": "@rallly/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["public/*"],
    },
    "strictNullChecks": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    ".next/types/**/*.ts",
    "src/app/[locale]/p/[participantUrlId]/page.tsx",
  ],
  "exclude": ["node_modules"],
}
