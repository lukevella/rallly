{
  "name": "rallly",
  "private": true,
  "version": "2.3.2",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build --filter=@rallly/web...",
    "db:deploy": "turbo db:deploy",
    "db:generate": "turbo db:generate",
    "db:migrate": "yarn workspace @rallly/database prisma migrate dev",
    "test": "yarn workspace @rallly/web test",
    "lint": "turbo lint",
    "lint:tsc": "turbo lint:tsc",
    "changelog:update": "gitmoji-changelog",
    "release": "./scripts/create-release.sh"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "gitmoji-changelog": "^2.3.0",
    "prettier": "^2.8.4",
    "turbo": "^1.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
