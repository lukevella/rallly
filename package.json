{
  "name": "rallly",
  "private": true,
  "version": "3.11.1",
  "scripts": {
    "dev": "turbo dev --filter=@rallly/web",
    "dev:emails": "turbo dev --filter=@rallly/emails",
    "dev:landing": "dotenv -c development turbo dev --filter=@rallly/landing",
    "start": "turbo run start --filter=@rallly/web",
    "build": "turbo run build --filter=@rallly/web",
    "build:landing": "turbo build --filter=@rallly/landing",
    "build:test": "turbo build:test",
    "docs:dev": "turbo dev --filter=@rallly/docs...",
    "db:deploy": "pnpm --filter @rallly/database db:deploy",
    "db:generate": "pnpm --filter @rallly/database db:generate",
    "db:migrate": "pnpm --filter @rallly/database db:migrate",
    "db:reset": "pnpm --filter @rallly/database db:reset",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d && wait-on --timeout 60000 tcp:localhost:5450",
    "docker:down": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "test:integration": "turbo test:integration",
    "test:unit": "turbo test:unit",
    "lint": "turbo lint",
    "i18n:scan": "turbo i18n:scan",
    "type-check": "turbo type-check",
    "prettier": "prettier --write .",
    "release": "./scripts/create-release.sh",
    "sherif": "pnpm dlx sherif@latest",
    "sherif:fix": "pnpm dlx sherif@latest --fix"
  },
  "prisma": {
    "seed": "pnpm --filter @rallly/database db:seed",
    "schema": "./packages/database/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "dotenv-cli": "^7.1.0",
    "next": "^14.2.13",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.48.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.4",
    "turbo": "^2.1.1",
    "typescript": "^5.2.2",
    "vitest": "^2.1.1",
    "wait-on": "^6.0.1"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.12.1"
}
