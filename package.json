{
  "name": "rallly",
  "private": true,
  "version": "3.10.0",
  "scripts": {
    "dev": "turbo dev --filter=@rallly/web",
    "dev:emails": "turbo dev --filter=@rallly/emails",
    "dev:landing": "dotenv -c development turbo dev --filter=@rallly/landing",
    "start": "turbo run start --filter=@rallly/web",
    "build": "dotenv -c -- turbo run build --filter=@rallly/web",
    "build:test": "turbo build:test",
    "docs:dev": "turbo dev --filter=@rallly/docs...",
    "db:deploy": "prisma migrate deploy --schema=./packages/database/prisma/schema.prisma",
    "db:generate": "prisma generate --schema=./packages/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d && wait-on --timeout 60000 tcp:localhost:5450",
    "docker:down": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "test:integration": "turbo test:integration",
    "test:unit": "turbo test:unit",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check .",
    "ci": "biome ci .",
    "i18n:scan": "turbo i18n:scan",
    "type-check": "turbo type-check",
    "prettier": "prettier --write .",
    "release": "./scripts/create-release.sh"
  },
  "prisma": {
    "seed": "pnpm workspace @rallly/database db:seed"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@sentry/nextjs": "^8.32.0",
    "framer-motion": "^10.16.4",
    "next": "^14.2.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.2.2",
    "prisma": "^5.20.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "dotenv-cli": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.4",
    "turbo": "^2.1.1",
    "wait-on": "^6.0.1",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "pnpm@9.12.1"
}
