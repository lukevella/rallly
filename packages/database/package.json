    "@vercel/functions": "^3.3.6",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.3",
    "pg": "^8.17.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@rallly/tsconfig": "workspace:*",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.11.0",
    "prisma": "^7.3.0",
    "tsx": "^4.6.2"
  }
}
